<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:layout_gravity="center"
    android:background="@color/dialog_search_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title_search_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색할 레포지토리 이름을 입력하세요"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_search_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="가나다라마바사가나다라마바사가나다라마바사" />

    <TextView
        android:id="@+id/tv_btn_ok_search_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:text="검색"
        android:textColor="@color/dialog_search_btn_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_btn_cancel_search_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:text="취소"
        android:textColor="@color/dialog_search_btn_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_btn_ok_search_dialog"
        app:layout_constraintRight_toLeftOf="@id/tv_btn_ok_search_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>